<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image20160621_121902"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="0dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/input_name_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME"
                android:drawableLeft="@drawable/ic_user_name"
                android:inputType="textCapWords"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:drawablePadding="10dp"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>


            <EditText
                android:id="@+id/input_email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EMAIL ID"
                android:drawableLeft="@drawable/ic_email"
                android:inputType="textEmailAddress"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:drawablePadding="10dp"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>


            <EditText
                android:id="@+id/input_dob_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dateofbirth"
                android:hint="DATE OF BIRTH"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:drawablePadding="10dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>