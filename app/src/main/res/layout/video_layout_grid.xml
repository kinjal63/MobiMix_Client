<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_layout_list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/image_bg"
        android:padding="3dip">

        <ImageView
            android:id="@+id/list_video"
            android:layout_width="50dip"
            android:layout_height="50dip" />

    </LinearLayout>

    <!-- Title Of Song-->
    <TextView
        android:id="@+id/titleVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_video"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/thumbnail_video"
        android:maxLength="40"
        android:textColor="#040404"
        android:textSize="11dip"
        android:textStyle="bold"
        android:typeface="sans" />


    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/duration_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleVideo"
        android:layout_toRightOf="@+id/thumbnail_video"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:textColor="#000000"
        android:textSize="10dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/size_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/duration_video"
        android:layout_below="@+id/titleVideo"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:textColor="#000000"
        android:textSize="10dip" />


    <CheckBox
        android:id="@+id/itemCheckBox_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/xml_checkbox_background"
        android:theme="@style/MyCheckBox" />

    <!-- Rightend Arrow -->
    <!-- <ImageView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/arrow"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"/>-->

</RelativeLayout>